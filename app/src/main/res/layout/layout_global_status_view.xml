<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/status_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/net_fail" />

    <ProgressBar
        android:id="@+id/status_loading_view"
        style="@style/RotateLoadingProgressStyle"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/status_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="@dimen/home_margin_left"
        android:paddingEnd="@dimen/home_margin_right"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_14"
        tools:text="订单页面什么都没有订单页面什么都没有订单页面什么都没有订单页面什么都没有" />

    <TextView
        android:id="@+id/status_view_btn"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_big_round_color_fe6a9e"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15"
        tools:text="重新加载" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</merge>